<%= semantic_form_for [:admin, @admin_user] do |f| %>
  <%= f.inputs "User Info" do %>
    <%= f.input :email%>
    <%= f.input :first_name%>
    <%= f.input :last_name%>
    <%= f.input :nip%>
    <% if can?(:edit, @admin_user)%>
      <% if @admin_user.new_record? %>
        <%= f.input :password%>
        <%= f.input :password_confirmation%>
      <% end %>
      <%=f.input :roles, :collection => ROLES, :as => :check_boxes%>
    <% end %>
  <% end %>
  <%= f.buttons%>
<% end %>