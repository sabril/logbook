<%= semantic_form_for [:admin, current_admin_user], :url => update_password_admin_admin_users_path do |f| %>
  <%= f.inputs "New Password" do %>
    <%= f.input :password%>
    <%= f.input :password_confirmation%>
  <% end %>
  <%= f.buttons do%>
    <%= f.commit_button "Change Password"%>
    <%= link_to "Cancel", admin_admin_users_path%>
  <% end %>
<% end %>