= semantic_form_for [:admin, @document] do |f|
  = f.inputs "Document" do
    = f.input :document_group, :include_blank => false, :label => "Group"
    = f.input :name
    = f.input :number
    = f.input :location
    = f.input :start_retention, :as => :string, :input_html => {:class => "datepicker"}
    = f.input :end_retention, :as => :string, :input_html => {:class => "datepicker"}
    = f.input :pic, :include_blank => false
    = f.input :status, :collection => Document.status_collection, :include_blank => false
  = f.buttons